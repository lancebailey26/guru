<form>
       <h2> Log In</h2>
      
        <div class="container">
          <label for="mail"><b>Email</b></label>
          <input type="text" placeholder="Enter Email" id="email" required>
      
          <label for="psw"><b>Password</b></label>
          <input type="password" placeholder="Enter Password" id="psw" required>
      
          <button type="submit" id='login-button'>Login</button>
        </div>
      </form>

      <form >
       <h2> Sign Up</h2>
      
        <div class="container">
          <label for="uname"><b>Email</b></label>
          <input type="text" placeholder="Enter Email" id='email-signup' required>

          <label for="uname"><b>Username</b></label>
          <input type="text" placeholder="Enter Username" id='name-signup' required>
      
          <label for="psw"><b>Password</b></label>
          <input type="password" placeholder="Enter Password" id='password-signup' required>
      
          <button type="submit" id='signupbutton' >Sign Up</button>
        </div>
      </form>
      <script src='./js/login.js'/>